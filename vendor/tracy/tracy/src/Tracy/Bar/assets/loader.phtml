<?php

declare(strict_types=1);

namespace Tracy;

/**
 * @var ?string $nonce
 * @var bool $async
 * @var string $requestId
 */

$baseUrl = $_SERVER['REQUEST_URI'] ?? '';
$baseUrl .= strpos($baseUrl, '?') === false ? '?' : '&';
