<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Behat_Spec>
            <version>0.1.0</version>
        </Behat_Spec>
    </modules>
    <global>
        <blocks>
            <behat_spec>
                <class>Behat_Spec_Block</class>
            </behat_spec>
        </blocks>
        <helpers>
            <behat_spec>
                <class>Behat_Spec_Helper</class>
            </behat_spec>
        </helpers>
        <models>
            <behat_spec>
                <class>Behat_Spec_Model</class>
                <resourceModel>behat_spec_resource</resourceModel>
            </behat_spec>
            <behat_spec_resource>
                <class>Behat_Spec_Model_Resource</class>
            </behat_spec_resource>
        </models>
    </global>
    <config>
        <frontend>
            <routers>
                <spec>
                    <use>standard</use>
                    <args>
                        <module>Behat_Spec</module>
                        <frontName>spec</frontName>
                    </args>
                </spec>
            </routers>
        </frontend>
    </config>
</config>